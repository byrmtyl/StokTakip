@model StokTakip.Models.Entity.Kategori
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Guncelle</h2>


@using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post))

{
    <div class="container row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div>
                <label>Kategori Adı</label>
                @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
            </div>
            <div>
                <button class="btn btn-info">Guncelle</button>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>

}